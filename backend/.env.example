# Kaspa Ecosystem Backend Configuration
# Copy this file to .env and fill with your actual values
# NEVER commit the .env file!

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Google Sheets Configuration
GOOGLE_SHEET_ID=your_google_sheet_id_here
GOOGLE_PROJECT_ID=your_project_id

# Service Account - Get from Google Cloud Console
SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Private key from the JSON file downloaded from Google Cloud
# IMPORTANT: Replace \n with actual newlines or use the format below
SERVICE_ACCOUNT_KEY="-----BEGIN PRIVATE KEY-----
YOUR_PRIVATE_KEY_HERE
-----END PRIVATE KEY-----"

# Admin Credentials (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# JWT Secret (generate a secure one)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Optional: Logging Level
LOG_LEVEL=info
